@model IEnumerable<Ben_Project.Models.PO>

@{
    Layout = "~/Views/Shared/_StoreClerk.cshtml";    
    ViewData["Title"] = "Index";
}

<h3>Purchase Order</h3>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="po_tbl" class="table table-striped table-bordered display" style="width:100%">
    <thead>
        <tr style="background-color: lightskyblue">
            <th>PO Id</th>
            <th>Order Date</th>
            <th>Supplier Name</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var po in Model) {
        <tr>
            <td>@Html.ActionLink(@po.Id.ToString(), "Details", "PO", new { id = @po.Id }, null)</td>
            <td>@po.OrderDate</td>
            <td>@po.Supplier.Name</td>
            <td>@po.POStatus</td>
            <td>
                <a asp-action="Edit" asp-route-id="@po.Id">Delivery</a> |
                <a asp-action="Details" asp-route-id="@po.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@po.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
