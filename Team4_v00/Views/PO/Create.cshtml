@model Ben_Project.Models.PO

@{
    Layout = "~/Views/Shared/_StoreClerk.cshtml";    
    ViewData["Title"] = "Create";
    var suppliers = (List<Supplier>)ViewData["Suppliers"];
    
}

<h1>Create</h1>

<h4>PO</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateNext" >
            <div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                 
                <div class="form-group">
                    <label asp-for="OrderDate" class="control-label"></label>
                    <input asp-for="OrderDate" class="form-control"/>
                    <span asp-validation-for="OrderDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Supplier" class="control-label"></label>
                    <select asp-for=@Model.Supplier.Id 
                            class="form-control"
                            asp-items="@(new SelectList(suppliers,"Id", "Name"))">
                    </select>


                </div>
                

            </div>

            <div class="form-group">
                <a asp-action="Index">Back to List</a>
                    <input type="submit" value="Next" class="btn btn-primary" />
                    
            </div>
</form>
</div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

