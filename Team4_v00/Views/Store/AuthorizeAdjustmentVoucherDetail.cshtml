@model Ben_Project.Models.AdjustmentVoucher

@{
    ViewData["Title"] = "AuthorizeAdjustmentVoucherDetail";
    Layout = "~/Views/Shared/_StoreSupervisorAndManager.cshtml";    
}

<h1></h1>

<div class="text-center">
    <h1 class="display-4">Supervisor/Manager Adjustment Voucher Detail</h1>
</div>

<form asp-controller="Store" asp-action="IssueAdjustmentVoucher" method="post">

    <table id="SupMgrAdjVoucherDetail" align="center" border="1">
        <thead style="background-color: lightskyblue">
            <tr>
                <th>Item Code</th>
                <th>Quantity adjusted</th>
                <th>Reason</th>
            </tr>
        </thead>
        
        <tbody>
            @for (int i = 0; i < Model.AdjustmentDetails.Count; i++)
            {
                <tr>
                    <td>
                        <input asp-for="@Model.AdjustmentDetails[i].Stationery.Id" type="hidden" value="@Model.AdjustmentDetails[i].Stationery.Id"/>
                        @Model.AdjustmentDetails[i].Stationery.ItemNumber
                    </td>
                    <td>
                        <input asp-for="@Model.AdjustmentDetails[i].AdjustedQty" type="hidden" value="@Model.AdjustmentDetails[i].AdjustedQty"/>
                        @Model.AdjustmentDetails[i].AdjustedQty
                    </td>
                    <td>@Model.AdjustmentDetails[i].Reason</td>
                </tr>
            }
        </tbody>
    </table>

    <input asp-for="@Model.Id" type="hidden" value="@Model.Id" />

    <input id="saveBtn" type="submit" value="Issue" />

</form>